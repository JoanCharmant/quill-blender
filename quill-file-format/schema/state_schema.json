{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "$ref": "#/definitions/QuillState",
    "definitions": {
        "QuillState": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "Quill": {
                    "$ref": "#/definitions/Quill"
                }
            },
            "required": [
                "Quill"
            ],
            "title": "QuillState"
        },
        "Quill": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "Rulers": {
                    "$ref": "#/definitions/Rulers"
                },
                "DetailRender": {
                    "$ref": "#/definitions/DetailRender"
                },
                "MoveLayer": {
                    "type": "string"
                },
                "PaintLayer": {
                    "type": "string"
                },
                "CameraLayer": {
                    "type": "string"
                },
                "DirectManipulation": {
                    "type": "integer"
                },
                "ToolName": {
                    "type": "string"
                },
                "Tool": {
                    "$ref": "#/definitions/Tool"
                },
                "ColorPalette": {
                    "type": "array",
                    "items": {
                        "type": "number"
                    }
                }
            },
            "required": [
                "CameraLayer",
                "ColorPalette",
                "DetailRender",
                "DirectManipulation",
                "MoveLayer",
                "PaintLayer",
                "Rulers",
                "Tool",
                "ToolName"
            ],
            "title": "Quill"
