        "DetailRender": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "Surface": {
                    "$ref": "#/definitions/Surface"
                }
            },
            "required": [
                "Surface"
            ],
            "title": "DetailRender"
        },
        "Surface": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "Texture": {
                    "type": "string"
                },
                "Scale": {
                    "type": "number"
                }
            },
            "required": [
                "Scale",
                "Texture"
            ],
            "title": "Surface"
        },
        "Rulers": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "ShowGrid": {
                    "type": "boolean"
                }
            },
            "required": [
                "ShowGrid"
            ],
            "title": "Rulers"
        },
        "Tool": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "BrushID": {
                    "type": "integer"
                },
                "Color": {
                    "type": "array",
                    "items": {
                        "type": "number"
                    }
                },
                "Opacity": {
                    "type": "number"
                },
                "Size": {
                    "type": "number"
                },
                "TransparentTaper": {
                    "type": "string"
                },
                "WidthTaper": {
                    "type": "string"
                },
                "DirectionalStroke": {
                    "type": "boolean"
                }
            },
            "required": [
                "BrushID",
                "Color",
                "DirectionalStroke",
                "Opacity",
                "Size",
                "TransparentTaper",
                "WidthTaper"
            ],
            "title": "Tool"
        }
